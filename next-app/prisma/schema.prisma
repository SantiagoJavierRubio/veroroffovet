generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider      = "mysql"
  url           = env("DATABASE_URL")
  relationMode  = "prisma"
}

model Price {
  title       String @db.VarChar(255) @unique @id
  value       Int
  updatedAt   DateTime @updatedAt @default(now())
}

model Image {
  id          String @id @default(cuid())
  url         String
  alt         String?
  resourceId  String
  resource    Resource @relation(name: "resource", fields: [resourceId], references: [id])

  @@index([resourceId])
}

model Resource {
  id      String @id @unique @default(cuid())
  title   String @db.VarChar(255)
  text    String
  images  Image[] @relation(name: "resource")
}